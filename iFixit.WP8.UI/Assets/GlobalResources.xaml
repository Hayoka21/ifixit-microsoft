                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap"></TextBlock>
                    <TextBlock Text="{Binding Summary}" TextWrapping="Wrap" Foreground="{StaticResource ThirdBackgroundBrush}"></TextBlock>

